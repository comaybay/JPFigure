@page "/searchfor/"
@page "/searchfor/{Value}"

<NavBar></NavBar>
<h2>Tìm kiếm sản phẩm</h2>
<h3>@Value</h3>
<div class="product_ctn">
    <div class="products">
        
            @for (int i = 0; i < 6; i++)
            {
                <div class="product_item">
                    <div class="product_thumb">
                        <a href="">
                            <img src="Image/product5.png" alt="">
                        </a>
                        <a href="" class="add_cart">
                            <img src="Image/cart-white.png">
                            <span>Add To Cart</span>
                        </a>
                    </div>
                    <div class="product_name_ctn">
                        <a href="" class="product_name">Nendoroid Swacchao! Attack on Titan Levi</a>
                    </div>
                    <div class="product_price">1,300,000₫</div>
                </div>
            }
        
    </div>
</div>
<div class="page_navigate_ctn">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only"></span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only"></span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<BottomBar></BottomBar>

@code {
    [Parameter]
    public string Value { get; set; }
}
